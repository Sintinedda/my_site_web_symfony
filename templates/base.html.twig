<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1"/>
        <meta name="view-transition" content="same-origin" />

        {% block stylesheets %}
            <link href="{{ asset('assets/css/nav/nav.css') }}" rel="stylesheet"/>
            <link href="{{ asset('assets/css/nav/nav-768.css') }}" rel="stylesheet"/>
        {% endblock %}

        {% block javascripts %}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
            <script src="{{ asset('assets/js/nav.js') }}"></script>
        {% endblock %}
    </head>
    <body class="body" id="{% block body_id %}{% endblock %}">

        {% block header %}
            <header>
                {{ render(controller('App\\Controller\\NavController::nav', { 'route': app.request.attributes.get('_route') })) }}
            </header>
        {% endblock %}

        {% block body %}
            <main>{% block main %}{% endblock %}</main>
        {% endblock %}
    </body>
</html>
