                (-3)
            {% elseif skill.statBlock.wisdow == 6 or skill.statBlock.wisdow == 7 %}
                (-2)
            {% elseif skill.statBlock.wisdow == 8 or skill.statBlock.wisdow == 9 %}
                (-1)
            {% elseif skill.statBlock.wisdow == 10 or skill.statBlock.wisdow == 11 %}
                (0)
            {% elseif skill.statBlock.wisdow == 12 or skill.statBlock.wisdow == 13 %}
                (+1)
            {% elseif skill.statBlock.wisdow == 14 or skill.statBlock.wisdow == 15 %}
                (+2)
            {% elseif skill.statBlock.wisdow == 16 or skill.statBlock.wisdow == 17 %}
                (+3)
            {% elseif skill.statBlock.wisdow == 18 or skill.statBlock.wisdow == 19 %}
                (+4)
            {% elseif skill.statBlock.wisdow == 20 %}
                (+5)
            {% endif %}
        </td>
        <td>{{ skill.statBlock.charisma }}
            {% if skill.statBlock.charisma == 1 %}
                (-5)
            {% elseif skill.statBlock.charisma == 2 or skill.statBlock.charisma == 3 %}
                (-4)
            {% elseif skill.statBlock.charisma == 4 or skill.statBlock.charisma == 5 %}
                (-3)
            {% elseif skill.statBlock.charisma == 6 or skill.statBlock.charisma == 7 %}
                (-2)
            {% elseif skill.statBlock.charisma == 8 or skill.statBlock.charisma == 9 %}
                (-1)
            {% elseif skill.statBlock.charisma == 10 or skill.statBlock.charisma == 11 %}
                (0)
            {% elseif skill.statBlock.charisma == 12 or skill.statBlock.charisma == 13 %}
                (+1)
            {% elseif skill.statBlock.charisma == 14 or skill.statBlock.charisma == 15 %}
                (+2)
            {% elseif skill.statBlock.charisma == 16 or skill.statBlock.charisma == 17 %}
                (+3)
            {% elseif skill.statBlock.charisma == 18 or skill.statBlock.charisma == 19 %}
                (+4)
            {% elseif skill.statBlock.charisma == 20 %}
                (+5)
            {% endif %}
        </td>
    </tr>
    {% if skill.statBlock.competence %}
        <tr>
            <td colspan="6"><b>Compétences : </b>{{ skill.statBlock.competence }}</td>
        </tr>
    {% endif %}
    {% if skill.statBlock.immunityDamage %}
        <tr>
            <td colspan="6"><b>Immunités aux dégâts : </b>{{ skill.statBlock.immunityDamage }}</td>
        </tr>
    {% endif %}
    {% if skill.statBlock.immunityCondition %}
        <tr>
            <td colspan="6"><b>Immunités aux états : </b>{{ skill.statBlock.immunityCondition }}</td>
        </tr>
    {% endif %}
    <tr>
        <td colspan="6"><b>Sens : </b>{{ skill.statBlock.sens }}</td>
    </tr>
    <tr>
        <td colspan="6"><b>Langues : </b>{{ skill.statBlock.language }}</td>
    </tr>
    <tr>
        <td colspan="6"><b>Puissance : </b>{{ skill.statBlock.fp }}</td>
    </tr>
    <tr>
        <td colspan="6"><b>Bonus de maîtrise (BM) : </b>{{ skill.statBlock.bm }}</td>
    </tr>
    <tr>
        <th colspan="6">Capacités</th>
    </tr>
    {% for sk in skill.statBlock.statBlockSkills %}
        <tr >
            <td colspan="6"><b>{{ sk.name }}</b> {{ sk.descr|raw }}</td>
        </tr>
    {% endfor %}
    <tr>
        <th colspan="6">Actions</th>
    </tr>
    {% for action in skill.statBlock.statBlockActions %}
        <tr>
            <td colspan="6"><b>{{ action.name }}</b> {{ action.descr|raw }}</td>
        </tr>
    {% endfor %}  
    {% if skill.statBlock.statBlockReactions|length >= 1 %}
        <tr>
            <th colspan="6">Réactions</th>
        </tr>
        {% for reaction in skill.statBlock.statBlockReactions %}
            <tr>
                <td colspan="6"><b>{{ reaction.name }}</b> {{ reaction.descr|raw }}</td>
            </tr>
        {% endfor %}  
    {% endif %}
</table>