{% extends 'base.html.twig' %}

{% block title %}{{ specialty.name }}{% endblock %}

{% block stylesheets %}
    {{ parent () }}
    <link href="{{ asset('assets/css/classe/specialty.css') }}" rel="stylesheet"/>
    <link href="{{ asset('assets/css/statblock/table.css') }}" rel="stylesheet"/>
{% endblock %}

{% block body_id 'specialty-item' %}


{% block main %}

    <h1 class="specialty-title">
        
        {% if specialty.part %}
            {{ specialty.part }}
            {% if specialty.part2 == "de l'" %}
                {{ specialty.part2 }}{{ specialty.name }}
            {% else %}
                {{ specialty.part2 }} {{ specialty.name }}
            {% endif %}
        {% else %}
            {{ specialty.name }}
        {% endif %}
        
        {% if specialty.ua == true %}
            (AD)
        {% endif %}

    </h1>
    <div class="container">
        <p class="specialty-descr">{{ specialty.descr1|raw }}</p>
        {% if specialty.descr2 %}
            <p class="specialty-descr">{{ specialty.descr2|raw }}</p>
        {% endif %}
        {% if specialty.descr3 %}
            <p class="specialty-descr">{{ specialty.descr3|raw }}</p>
        {% endif %}
        {% if specialty.descr4 %}
            <p class="specialty-descr">{{ specialty.descr4|raw }}</p>
        {% endif %}
        {% if specialty.descr5 %}
            <p class="specialty-descr">{{ specialty.descr5|raw }}</p>
        {% endif %}

        {% if specialty.specialtyItemTable %}
            {% include 'client/classe/construct/_specialty-table.html.twig' %}
        {% endif %}

        <p class="specialty-source">Source : {{ specialty.source }}</p>
        {% for skill in specialty.specialtySkills %}
            <h2 class="specialty-skill-title">{{ skill.name }}</h2>
            <p class="specialty-skill-descr">{{ skill.descr1|raw }}</p>
            {% if skill.descr2 %}
                <p class="specialty-skill-descr">{{ skill.descr2|raw }}</p>
            {% endif %}
            {% if skill.descr3 %}
                <p class="specialty-skill-descr">{{ skill.descr3|raw }}</p>
            {% endif %}
            {% if skill.descr4 %}
                <p class="specialty-skill-descr">{{ skill.descr4|raw }}</p>
            {% endif %}
            {% if skill.descr5 %}
                <p class="specialty-skill-descr">{{ skill.descr5|raw }}</p>
            {% endif %}
            {% if skill.descr6 %}
                <p class="specialty-skill-descr">{{ skill.descr6|raw }}</p>
            {% endif %}
            {% if skill.descr7 %}
                <p class="specialty-skill-descr">{{ skill.descr7|raw }}</p>
            {% endif %}

            {% if skill.specialtySkillTable %}
                {% include 'client/classe/construct/_specialty-skill-table.html.twig' %}
            {% endif %}

            {% if skill.statBlock %}
                {% include 'client/classe/construct/_specialty-skill-stat-block.html.twig' %}
            {% endif %}

        {% endfor %}
    </div>

{% endblock %}