{% extends 'base.html.twig' %}

{% block title %}Subrace index{% endblock %}

{% block body %}
    <h1>Subrace index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Race</th>
                <th>Source</th>
                <th>Name</th>
                <th>Descr1</th>
                <th>Descr2</th>
                <th>Descr3</th>
                <th>Descr4</th>
                <th>Descr5</th>
                <th>Ability_inc</th>
                <th>Type</th>
                <th>Age</th>
                <th>Alignment</th>
                <th>Size</th>
                <th>Speed</th>
                <th>Language</th>
                <th>Talent</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for subrace in subraces %}
            <tr>
                <td>{{ subrace.id }}</td>
                <td>{{ subrace.source.race.name }}</td>
                <td>{{ subrace.source.name }}</td>
                <td>{{ subrace.name }}</td>
                <td>{{ subrace.descr1 }}</td>
                <td>{{ subrace.descr2 }}</td>
                <td>{{ subrace.descr3 }}</td>
                <td>{{ subrace.descr4 }}</td>
                <td>{{ subrace.descr5 }}</td>
                <td>{{ subrace.abilityInc }}</td>
                <td>{{ subrace.type }}</td>
                <td>{{ subrace.age }}</td>
                <td>{{ subrace.alignment }}</td>
                <td>{{ subrace.size }}</td>
                <td>{{ subrace.speed }}</td>
                <td>{{ subrace.language }}</td>
                <td>
                    {% for talent in subrace.talent %}
                        {{ talent.name }}
                    {% endfor %}
                </td>
                <td>
                    <a href="{{ path('app_subrace_show', {'id': subrace.id}) }}">show</a>
                    <a href="{{ path('app_subrace_edit', {'id': subrace.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="15">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_subrace_new') }}">Create new</a>
{% endblock %}
